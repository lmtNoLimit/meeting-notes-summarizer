{
  "name": "Meeting Notes Summarizer",
  "description": "AI-powered meeting transcription and summarization tool using OpenAI and Firebase",
  "language": "typescript",
  "framework": "nextjs",
  "root": "src",
  "main_files": [
    "src/app/page.tsx",
    "src/components/AudioUploader.tsx",
    "src/app/api/upload/route.ts",
    "src/app/api/summaries/route.ts",
    "src/app/summaries/page.tsx"
  ],
  "important_paths": {
    "api": "src/app/api",
    "components": "src/components",
    "lib": "src/lib",
    "config": {
      "firebase": "src/lib/firebase.ts",
      "rules": [
        "firestore.rules",
        "storage.rules"
      ],
      "indexes": "firestore.indexes.json"
    }
  },
  "patterns": {
    "api_routes": "src/app/api/**/route.ts",
    "components": "src/components/**/*.tsx",
    "pages": "src/app/**/page.tsx"
  },
  "key_concepts": {
    "audio_processing": {
      "files": ["src/app/api/upload/route.ts"],
      "description": "Handles audio file upload, chunking, and OpenAI Whisper transcription"
    },
    "summarization": {
      "files": ["src/app/api/upload/route.ts"],
      "description": "Uses GPT-4 to generate structured meeting summaries"
    },
    "storage": {
      "files": ["src/lib/firebase.ts", "storage.rules"],
      "description": "Firebase Storage configuration and security rules"
    },
    "database": {
      "files": ["src/lib/firebase.ts", "firestore.rules"],
      "description": "Firestore configuration and security rules"
    }
  },
  "dependencies": {
    "core": [
      "next",
      "react",
      "typescript"
    ],
    "api": [
      "openai",
      "firebase",
      "firebase-admin"
    ],
    "ui": [
      "tailwindcss"
    ]
  }
} 